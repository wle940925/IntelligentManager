<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/rangking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="1"
        android:textSize="24sp"/>

    <com.example.intelligentmanager.finance.View.widget.riseNum.RoundImageView
        android:id="@+id/items_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toRightOf="@+id/rangking"
        android:src="@drawable/boy"
        />

    <TextView
        android:id="@+id/friends_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/items_img"
        android:layout_toRightOf="@+id/items_img"
        android:text="且听风吟"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/step_counters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/friends_id"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="12"
        android:textSize="24sp"/>

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/transaction_time"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/transaction_time"
        android:layout_marginTop="61dp"
        android:background="@color/color_btn_normal_cbn2"/>
</RelativeLayout>